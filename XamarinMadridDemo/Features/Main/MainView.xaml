<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMadridDemo.Features.MainView">
    
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">

        <Button Text="Open counter" HorizontalOptions="Center" Command="{Binding OpenCounterCommand}"/>
        <Button Text="Show orientation" HorizontalOptions="Center" Command="{Binding OpenOrientationCommand}"/>
        <Button Text="Manage windows" HorizontalOptions="Center" Command="{Binding OpenWindowCommand}"/>
        <Button Text="Show handlers" HorizontalOptions="Center" Command="{Binding OpenHandlersCommand}"/>

    </StackLayout>
</ContentPage>
